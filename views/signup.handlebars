<div class="row">
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div>
        <label for="band-name">Band Name:</label>
        <input class="form-input" type="text" id="band-signup">
      </div>
      <div>
        <label for="band-description">Band Description:</label>
        <input class="form-input" type="text" id="band-desc">
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <a href="/login">login instead</a>

    <script src="./js/signup.js"></script>