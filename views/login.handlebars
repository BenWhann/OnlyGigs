<div class="row">
      <h2 class="has-text-centered is-size-3 has-text-warning-light mt-6 has-text-weight-semibold" >Login</h2>

  <div class="form login-form field is-grouped is-grouped-centered ">

    <form class="mt-4 box has-background-warning-light	">
      
      <div class="form-group ">
        <label for="email-login" class="label is-size-4 has-text-danger">Email:</label>
        <input class="form-input input" type="text" id="email-login" placeholder="name@gmail.com"/>
      </div>

      <div class="form-group">
        <label for="password-login" class="label is-size-4 has-text-danger">Password:</label>
        <input class="form-input input" type="password" id="password-login" placeholder="********"/>
      </div>
      <div class="form-group has-text-centered">
        <button class="button button is-danger is-focused has-text-warning-light mt-2" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="has-text-centered">
  <a class="is-size-5 has-text-warning-light is-underlined" href="/signup">Signup instead</a>
</div>
