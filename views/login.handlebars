<div class="row pt-5 mt-4">
      <h2 class="has-text-centered is-size-2 has-text-warning-light mt-6 has-text-weight-bold mgt-large" >LOGIN</h2>

  <div class="columns form login-form field is-grouped is-grouped-centered ">

    <form class=" column is-3 mt-4 box has-background-warning-light	">
      
      <div class="form-group ">
        <label for="email-login" class="label is-size-3 has-text-danger ">Email:</label>
        <input class="form-input input is-danger is-medium" type="text" id="email-login" placeholder="name@gmail.com"/>
      </div>

      <div class="form-group mt-4">
        <label for="password-login" class="label is-size-3 has-text-danger">Password:</label>
        <input class="form-input input is-danger is-medium" type="password" id="password-login" placeholder="********"/>
      </div>

      <div class="form-group has-text-centered">
        <button class="button button is-danger is-focused has-text-warning-light mt-2" type="submit">login</button>
      </div>
      
    </form>
  </div>

  <div class="has-text-centered">
  <a class="is-size-5 has-text-warning-light is-underlined" href="/signup">Signup instead</a>
</div>

